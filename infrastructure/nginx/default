server {
    listen 80;
    server_name 54.253.246.147;;  # Use localhost for local testing

    # Proxy requests to the FastAPI app
    location /api {
        proxy_pass http://fastapi-app:8000;  # FastAPI service
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Proxy requests to the Node.js app
    location / {
        proxy_pass http://nodejs-app:3000;  # Node.js service
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
